{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": ["./lib"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/code",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/minami"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false,
        "default": {
            "includeDate": false
        }
    }
}
